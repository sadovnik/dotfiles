[diff]
    compactionHeuristic = true
    algorithm = patience

[core]
    editor = nvim
    excludesfile = ~/.gitignore

[commit]
    template = ~/.git_commit_message_template.txt

[push]
    default = current

[alias]
    s = status
    r = reset
    d = diff
    ds = diff --staged
    ap = add -p
    cleanup = "!git branch --merged | grep  -v '\\*\\|master\\|dev' | xargs -n 1 git branch -d"
    co = checkout
    pu = push -u
    pf = push --force
    cm = commit -v
    cma = commit -v --amend
    m = checkout master
    b = branch
